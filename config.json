          "autocompleteType": "function",
          "functionName": "listTablesAuto",
          "description": "The table to which to grant the user permissions",
          "required": true
        },
        {
          "name": "scope",
          "viewName": "Permission Scope",
          "type": "options",
          "options": [
            {
              "id": "READ",
              "name": "Read Only"
            },
            {
              "id": "WRITE",
              "name": "Write/Update Only"
            },
            {
              "id": "READ_WRITE",
              "name": "Read And Write"
            },
            {
              "id": "FULL",
