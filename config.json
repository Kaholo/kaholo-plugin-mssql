          "description": "The user to which to grant permissions",
          "required": true
        },
        {
          "name": "db",
          "viewName": "Database",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "listDatabasesAuto",
          "description": "The database to which the table belongs",
          "required": true
        },
        {
          "name": "table",
          "viewName": "Table",
